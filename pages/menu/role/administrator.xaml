<Page x:Class="PP_PM02_Koshenskiy.pages.role.administrator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PP_PM02_Koshenskiy.pages.role"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="administrator">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Меню Администратора"/>
            <Button x:Name="bSeeAccounting"
                    Click="bSeeAccounting_Click"
                    Content="Просмотреть журнал"/>
            <Button x:Name="bSeeRequest"
                    Click="bSeeRequest_Click"
                    Content="Просмотреть заявки"/>
            <Button x:Name="bAddUsers"
                    Click="bAddUsers_Click"
                    Content="Добавить пользователей"/>
            <Button x:Name="bSeeUsers"
                    Click="bSeeUsers_Click"
                    Content="Просмотреть пользователей"/>
            <Button x:Name="bGoBack"
                    Click="bGoBack_Click"
                    Content="Вернуться"/>
        </StackPanel>
    </Grid>
</Page>
