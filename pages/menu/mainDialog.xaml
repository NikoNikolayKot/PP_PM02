<Page x:Class="PP_PM02_Koshenskiy.pages.menu.mainDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PP_PM02_Koshenskiy.pages.menu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="mainDialog">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Image Source="/resource/logoImage.png"
                   Width="512"
                   Margin="0 0 0 50"/>
            <Button x:Name="bAuthorization"
                    Click="bAuthorization_Click"
                    Content="У меня есть аккаунт"/>
            <Button x:Name="bGuest"
                    Click="bGuest_Click"
                    Content="У меня нет аккаунта"/>
        </StackPanel>
    </Grid>
</Page>
